<div class="homepage-fashion-trends-box">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <h2 class="mb-4 sans-serif primary-title"><%= Spree.t('homepage.vendors_title') %></h2>
      </div>
    </div>
    <div class="row">
      <% Spree::Vendor.all.each do |vendor| %>
        <div class="col-6 col-md-3 text-center mb-3">
          <%= render partial: 'spree/shared/vendors/vendor_card', locals: { vendor: vendor } %>
        </div>
      <% end %>
    </div>
  </div>
</div>
